{
  "name": "uBoard",
  "version": "1.0.0",
  "main": "desktop.html",
  "window": {
    "show": true,
    "toolbar": false,
    "frame": true,
    "position": "center",
    "width": 480,
    "height": 320,
    "min_width": 480,
    "min_height": 320,
    "resizable": false,
    "kiosk": false
  },
  "chromium-args": "--child-clean-exit",
  "dependencies": {
    "express": "^4.13.3",
    "opn": "^5.2.0",
    "robotjs": "^0.4.7",
    "socket.io": "^4.5.3"
  },
  "scripts": {
    "postinstall": "bower install",
    "dist-mac": "build --tasks mac-x64 --mirror https://dl.nwjs.io/ .",
    "dist": "build --tasks win-x86,win-x64,linux-x86,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --mac-x64 --mirror https://dl.nwjs.io/ ."
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.14.6"
  },
  "build": {
    "nwVersion": "0.28.2",
    "packed": true
  }
}
